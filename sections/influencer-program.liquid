}

.influencer-what-we-offer__image img {
  width: 100%;
  height: auto;
  border-radius: 12px;
  box-shadow: 0 8px 30px rgba(0,0,0,0.1);
}

/* ===== EXCLUSIVE REWARDS SECTION ===== */
.influencer-exclusive-rewards {
  padding: 4rem 0;
  background: var(--cream);
}

.influencer-exclusive-rewards__container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
}

.influencer-exclusive-rewards__image {
  position: relative;
}

.influencer-exclusive-rewards__image img {
  width: 100%;
  height: auto;
  border-radius: 12px;
  box-shadow: 0 8px 30px rgba(0,0,0,0.1);
}

.influencer-exclusive-rewards__content h2 {
  font-size: 32px;
  font-weight: 700;
  color: var(--text-dark);
  margin-bottom: 2rem;
