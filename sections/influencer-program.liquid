    </div>
  </div>
</div>
{% endif %}

<!-- TESTIMONIALS SECTION -->
{% if section.settings.show_testimonials %}
<div class="influencer-testimonials">
  <div class="influencer-testimonials__container">
    <h2 class="influencer-testimonials__title">{{ section.settings.testimonials_title }}</h2>
    
    <div class="influencer-testimonials__grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'testimonial_item' %}
            <div class="influencer-testimonial" {{ block.shopify_attributes }}>
              <div class="influencer-testimonial__quote">"</div>
              <p class="influencer-testimonial__text">{{ block.settings.testimonial_text }}</p>
              <div class="influencer-testimonial__author">{{ block.settings.testimonial_author }}</div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
    
    {% if section.settings.testimonials_cta_text %}
      <button type="button" id="join-now-bottom-btn" class="influencer-testimonials__cta">
        {{ section.settings.testimonials_cta_text }}
      </button>
    {% endif %}
  </div>
</div>
{% endif %}

<!-- BOTTOM PROGRAMS SECTION -->
{% if section.settings.show_bottom_programs %}
<div class="influencer-bottom-programs">
  <div class="influencer-bottom-programs__container">
    <div class="influencer-bottom-programs__grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'program_item' %}
            <div class="influencer-program" {{ block.shopify_attributes }}>
              {% if block.settings.program_image %}
                <div class="influencer-program__image">
                  <img src="{{ block.settings.program_image | img_url: '400x300' }}" 
                       alt="{{ block.settings.program_title }}"
                       loading="lazy">
                </div>
              {% endif %}
              
              <h3 class="influencer-program__title">{{ block.settings.program_title }}</h3>
              <p class="influencer-program__description">{{ block.settings.program_description }}</p>
              
              {% if block.settings.program_link %}
                <a href="{{ block.settings.program_link }}" class="influencer-program__link">
                  {{ block.settings.program_link_text }}
                </a>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>
{% endif %}

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Handle join now button clicks
  const joinNowBtn = document.getElementById('join-now-btn');
  const joinNowBottomBtn = document.getElementById('join-now-bottom-btn');
  
  function scrollToApplication() {
    // Scroll to the start influencing section or application form
    const startSection = document.querySelector('.influencer-start');
    if (startSection) {
      startSection.scrollIntoView({ 
        behavior: 'smooth', 
        block: 'start' 
      });
    }
  }
  
  if (joinNowBtn) {
    joinNowBtn.addEventListener('click', scrollToApplication);
  }
  
  if (joinNowBottomBtn) {
    joinNowBottomBtn.addEventListener('click', scrollToApplication);
  }
});
</script>

