<style>
/* ===== FONT SIZE UTILITY CLASSES ===== */
.text-14 { font-size: 14px; }
.text-16 { font-size: 16px; }
.text-18 { font-size: 18px; }
.text-20 { font-size: 20px; }
.text-24 { font-size: 24px; }
.text-28 { font-size: 28px; }
.text-32 { font-size: 32px; }
.text-36 { font-size: 36px; }
.text-48 { font-size: 48px; }

/* ===== CSS VARIABLES ===== */
:root {
  --primary-green: #89C321;
  --dark-green: #2B2945;
  --light-green: #E8F5E8;
  --cream: #F9F7F4;
  --text-dark: #2B2945;
  --text-light: #718793;
  --white: #FFFFFF;
  --yellow-accent: #FFD700;
}

/* ===== HERO SECTION ===== */
.influencer-hero {
  position: relative;
  height: 70vh;
  min-height: 500px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  overflow: hidden;
}

.influencer-hero__background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.influencer-hero__background img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  display: none;
}

.influencer-hero__background img.desktop-image {
  display: block;
}

.influencer-hero__background img.mobile-image {
  display: none;
}

.influencer-hero__overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(43, 41, 69, 0.6);
  z-index: 2;
}

.influencer-hero__content {
  position: relative;
  z-index: 3;
  max-width: 900px;
  padding: 0 20px;
}

.influencer-hero__title {
  font-size: 36px;
  font-weight: 700;
  color: white;
  margin-bottom: 1.5rem;
  line-height: 1.2;
  font-family: serif;
}

.influencer-hero__subtitle {
  font-size: 20px;
  color: white;
  margin-bottom: 2rem;
  line-height: 1.4;
  font-weight: 400;
}

.influencer-hero__cta {
  display: inline-block;
  background: var(--yellow-accent);
  color: var(--text-dark);
  padding: 15px 30px;
  text-decoration: none;
  border-radius: 8px;
  font-weight: 600;
  font-size: 18px;
  transition: all 0.3s ease;
  cursor: pointer;
}

.influencer-hero__cta:hover {
  background: #FFC107;
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(0,0,0,0.3);
}

/* ===== WHY PARTNER WITH MAXLEAD SECTION ===== */
.influencer-why-partner {
  padding: 4rem 0;
  background: var(--cream);
}

.influencer-why-partner__container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.influencer-why-partner__content {
  display: flex;
  align-items: flex-start;
  gap: 3rem;
}

.influencer-why-partner__left {
  flex: 0 0 30%;
  text-align: left;
}

.influencer-why-partner__right {
  flex: 0 0 70%;
}

.influencer-why-partner__title {
  font-size: 32px;
  font-weight: 700;
  color: var(--text-dark);
  margin-bottom: 1rem;
  font-family: serif;
  line-height: 1.2;
}

.influencer-why-partner__description {
  font-size: 18px;
  color: var(--text-light);
  line-height: 1.6;
}

.influencer-why-partner__grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 2rem;
}

.influencer-benefit {
  background: var(--white);
  border-radius: 12px;
  padding: 2rem;
  text-align: left;
  box-shadow: 0 4px 20px rgba(0,0,0,0.08);
  transition: all 0.3s ease;
  position: relative;
}

.influencer-benefit:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 30px rgba(0,0,0,0.12);
}

.influencer-benefit__number {
  position: absolute;
  top: -10px;
  left: 20px;
  background: var(--primary-green);
  color: white;
  width: 40px;
  height: 40px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 16px;
}

.influencer-benefit__icon {
  width: 60px;
  height: 60px;
  margin: 1rem 0 1.5rem 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.influencer-benefit__icon img {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

.influencer-benefit__title {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-dark);
  margin-bottom: 1rem;
  line-height: 1.3;
}

.influencer-benefit__description {
  font-size: 16px;
  color: var(--text-light);
  line-height: 1.5;
}

/* ===== WHAT WE OFFER SECTION ===== */
.influencer-what-we-offer {
  padding: 4rem 0;
  background: var(--light-green);
}

.influencer-what-we-offer__container {
