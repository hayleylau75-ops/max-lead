<style>
  .product-content-section {
    margin-top: 30px;
    padding-top: 30px;
    {% comment %} border-top: 1px solid rgba(var(--text-color)/0.15); {% endcomment %}
  }

  .product-content-section .container {
    padding: 0;
  }

  .product-content-collapse {
    margin-bottom: 10px;
    border-bottom: 1px solid rgba(var(--text-color)/0.15);
  }

  .product-content-collapse:last-child {
    border-bottom: none;
  }

  .product-content-collapse .card__title img {
    width: 30px;
    height: auto;
    margin-right: 10px;
  }

  @media screen and (max-width: 767px) {
    .product-content-section {
      margin-top: 20px;
      padding-top: 20px;
    }
  }
</style>

{% comment %}检查是否有任何区块有内容可显示{% endcomment %}
{% assign has_content = false %}
{% for block in section.blocks %}
  {% if block.type == 'collapse' %}
    {% if product.metafields.custom[block.settings.key1].value != blank or product.metafields.custom[block.settings.key2].value != blank %}
      {% assign has_content = true %}
      {% break %}
    {% endif %}
  {% endif %}
{% endfor %}

{% comment %} 产品内容和评论包装器 - 固定HTML结构 {% endcomment %}
<div class="product-content-reviews-container">
  {% comment %} 产品内容部分 - 左列 {% endcomment %}
  <div class="product-content-column">

{% if section.blocks.size > 0 and has_content %}
    <div class="product-content-section">
      <div class="container">
        <div class="card">
          {% for block in section.blocks %}
            {% if block.type == 'collapse' %}
              {% if product.metafields.custom[block.settings.key1].value != blank
                or product.metafields.custom[block.settings.key2].value != blank
              %}
                <div class="product-content-collapse">
                  <button
                    class="card__collapsible-button"
                    data-action="toggle-collapsible"
                    data-close-siblings="false"
                    aria-expanded="{% if block.settings.default_open %}true{% else %}false{% endif %}"
                    aria-controls="block-{{ section.id }}-{{ block.id }}"
                  >
                    <span class="card__title heading h3">
                      {%- if block.settings.icon != blank %}{% render 'image', image: block.settings.icon %}{% endif -%}
                      {{- block.settings.title -}}
                    </span>
                    <span class="disclosure__toggle">
                      {% render 'icon-plus' %}
                    </span>
                  </button>
                  <div
                    id="block-{{ section.id }}-{{ block.id }}"
                    class="card__collapsible"
                    {% if block.settings.default_open %}
                      style="height:auto"
                    {% endif %}
                  >
                    <div class="card__collapsible-content">
                      <div class="rte text--pull">
                        {% if product.metafields.custom[block.settings.key1].value != blank %}
                          {{ product.metafields.custom[block.settings.key1] | metafield_tag }}
                        {% else %}
                          {{ product.metafields.custom[block.settings.key2].value }}
                        {% endif %}
                      </div>
                    </div>
                  </div>
                </div>
              {% endif %}
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
{% endif %}

  </div>
  
  {% comment %} 产品评论部分 - 右列 {% endcomment %}
  <div class="product-reviews-column">
    <div class="product-reviews-section">
      <div class="container">
        <div class="card">
          {% comment %} 渲染评论blocks {% endcomment %}
          {% for block in section.blocks %}
            {% if block.type == '@app'or block.type contains 'stamped' %}
              {%- render block -%}
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Content",
  "settings": [],
  "blocks": [
    {
      "type": "collapse",
      "name":"Collapse",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "checkbox",
          "id": "default_open",
          "label": "Default Open",
          "default":false
        },
        {
          "type": "header",
          "content": "Use Richtext Content"
        },
        {
          "type": "text",
          "id":"key1",
          "label": "Key"
        },
        {
          "type": "header",
          "content": "Use Single line text Content"
        },
        {
          "type": "text",
          "id":"key2",
          "label": "Key"
        }
      ]
    },
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Product Content"
    }
  ]
}
{% endschema %}
