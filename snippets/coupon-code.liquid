  {% endif %}
  <script>
    function updatecode(title) {
      {% unless is_product_code %}
        var value = null;
        var handle = "{{ product.handle }}";
        var url = "/products/" + handle + "?view=code.json";
        var xhr = new XMLHttpRequest();
        xhr.open('GET', url);
        xhr.onload = function() {
            if (xhr.status === 200) {
                var data = JSON.parse(xhr.responseText);
              console.log(data)
                data.variants.forEach(function(variant) {
                    var currttitle = variant.title;
                    if (currttitle == title) {
                        name = variant.codeinfo.codename;
                        value = variant.codeinfo.codevalue;
                    }
                });
                if (value !== null) {
                    document.querySelector('.coupon-code-box').style.display = 'block';
                    document.querySelector('.coupon_code').style.display = 'block';
                    document.querySelector('[code-name]').setAttribute('code-name', name);
                    document.querySelector('[code-value]').setAttribute('code-value', value);
                    document.querySelector('[code-name]').innerHTML = name;
                    document.querySelector('[code-value]').innerHTML = value;
                } else {
                    document.querySelector('div.coupon-code-box').style.display = 'none';
                }
            } else {
                console.warn('ERROR', xhr.status);
            }
        };
        xhr.send();
      {% endunless %}

    }
  </script>
  <script>
    function copyToClipboard(element) {
      // 获取要复制的文本
      var targetElement = document.querySelector(element);
      var textToCopy = targetElement ? targetElement.textContent.trim() : '';
      
      if (!textToCopy) {
        alert("No code to copy!");
        return;
      }
      
      // 使用现代clipboard API
      if (navigator.clipboard && window.isSecureContext) {
        navigator.clipboard.writeText(textToCopy).then(function() {
          alert("Copied code: " + textToCopy + "! SHOP NOW!");
          redirectToDiscount(textToCopy);
        }).catch(function(err) {
          console.error('Failed to copy: ', err);
          fallbackCopyToClipboard(textToCopy);
        });
      } else {
        // 降级方案：使用传统方法
        fallbackCopyToClipboard(textToCopy);
      }
    }
    
    function fallbackCopyToClipboard(text) {
      var textArea = document.createElement("textarea");
      textArea.value = text;
      textArea.style.position = "fixed";
      textArea.style.left = "-999999px";
      textArea.style.top = "-999999px";
      document.body.appendChild(textArea);
      textArea.focus();
      textArea.select();
      
      try {
        document.execCommand('copy');
        alert("Copied code: " + text + "! SHOP NOW!");
        redirectToDiscount(text);
      } catch (err) {
        console.error('Fallback copy failed: ', err);
        alert("Failed to copy. Please copy manually: " + text);
      }
      
      document.body.removeChild(textArea);
    }
    
    function redirectToDiscount(codeName) {
      var url = window.location.pathname + window.location.search;
      window.location.href = "/discount/" + encodeURIComponent(codeName) + "?redirect=" + encodeURIComponent(url);
    }
  </script>
</div>