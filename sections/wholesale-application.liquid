<script>
document.addEventListener('DOMContentLoaded', function() {
  // Get the Get Started button and form section
  const getStartedBtn = document.getElementById('get-started-btn');
  const formSection = document.getElementById('wholesale-form-section');
  
  if (getStartedBtn && formSection) {
    // Add click event listener to the Get Started button
    getStartedBtn.addEventListener('click', function() {
      // Show the entire form section
      formSection.classList.remove('wholesale-form-hidden');
      formSection.classList.add('wholesale-form-visible');
      
      // Smooth scroll to the form section
      formSection.scrollIntoView({ 
        behavior: 'smooth', 
        block: 'start' 
      });
    });
  }
  
  // Note: Form submission is now handled by JotForm iframe
  // The iframe will handle all form functionality automatically
});
</script> 