  .event-code .code-btn a {
    color: #fff;
    background-color: #f29f0e;
    border: 1px solid #eaeaea;
  }
  .event-code .code-btn a span {
    height: 100%;
    width: 100%;
    transition: all 0.5s cubic-bezier(0.31, -0.105, 0.43, 1.4);
  }
  .event-code .code-btn a .code-name {
    display: block;
    text-align: center;
  }
  .event-code .code-btn a .success {
    position: absolute;
    top: 0;
    visibility: hidden;
    width: 0;
    cursor: default;
    opacity: 0;
    left: 100%;
  }
  .event-code .code-btn a .success svg {
    fill: #fff;
    width: 100%;
    height: 40px;
  }
  .event-code .code-btn a.check {
    color: transparent;
    background: {{ main_color }};
    transition: color 0.5s cubic-bezier(0.31, -0.105, 0.43, 1.4);
    transition: background 0.5s cubic-bezier(0.31, -0.105, 0.43, 1.4);
  }
  .event-code .code-btn a.check .code-name {
    left: -100%;
    opacity: 0;
  }
  .event-code .code-btn a.check .success {
    width: inherit;
    visibility: visible;
    left: 0;
    opacity: 1;
  }
