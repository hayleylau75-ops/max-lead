        </div>
      {% else %}
        <div class="coupon_code variants" style="display:none;">
          <div class="coupontext" style="display: flex !important; align-items: center !important; justify-content: center !important; flex-wrap: nowrap !important; gap: 6px !important; white-space: nowrap !important; line-height: 1 !important;">Use code <span class="bold" id="couponcode" code-name=""></span> to save <span class="bold" code-value=""></span> ! <a onclick="copyToClipboard('#couponcode')" style="margin-left: 0 !important;">SAVE</a></div>
        </div>
      {% endif %}
    {% else %}
      {% for variant in product.variants limit: 1 %}
        {% if variant.available and variant.metafields.custom.code_name != blank %}
          <div class="coupon_code variants">
            <div class="coupontext" style="display: flex !important; align-items: center !important; justify-content: center !important; flex-wrap: nowrap !important; gap: 6px !important; white-space: nowrap !important; line-height: 1 !important;">Use code <span class="bold" id="couponcode" code-name="{{ variant.metafields.custom.code_name }}">{{- variant.metafields.custom.code_name -}}</span> to save <span class="bold" code-value="{{ variant.metafields.custom.code_discount_value }}">{{- variant.metafields.custom.code_discount_value -}}</span> ! <a onclick="copyToClipboard('#couponcode')" style="margin-left: 0 !important;">SAVE</a></div>
          </div>
        {% else %}
          <div class="coupon_code variants" style="display:none;">
            <div class="coupontext" style="display: flex !important; align-items: center !important; justify-content: center !important; flex-wrap: nowrap !important; gap: 6px !important; white-space: nowrap !important; line-height: 1 !important;">Use code <span class="bold" id="couponcode" code-name=""></span> to save <span class="bold" code-value=""></span> ! <a onclick="copyToClipboard('#couponcode')" style="margin-left: 0 !important;">SAVE</a></div>
          </div>
        {% endif %}
