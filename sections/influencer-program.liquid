/* ===== ELIGIBILITY REQUIREMENTS SECTION ===== */
.influencer-eligibility {
  padding: 4rem 0;
  background: var(--light-green);
}

.influencer-eligibility__container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
}

.influencer-eligibility__content h2 {
  font-size: 32px;
  font-weight: 700;
  color: var(--text-dark);
  margin-bottom: 2rem;
  font-family: serif;
}

.influencer-eligibility__list {
  list-style: none;
  padding: 0;
}

.influencer-eligibility__list li {
  font-size: 16px;
  color: var(--text-light);
  line-height: 1.6;
  margin-bottom: 1rem;
  padding-left: 2rem;
  position: relative;
}

.influencer-eligibility__list li::before {
  content: "•";
  color: var(--primary-green);
  font-size: 20px;
  position: absolute;
